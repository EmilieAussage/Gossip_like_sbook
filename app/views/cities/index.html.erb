<div class="jumbotron text-center">
    <h1 class="display-4">Bienvenue sur The Gossip Project!</h1>
    <p class="lead">Voici la page des villes!</p>
    <hr class="my-4">
    <p class="lead">
    </p>
</div>

<div class="card-columns">
    <% City.count.times do |i| %>
    
        <div class="card">
            <div class="card-body">
            <h5 class="card-title"><%= City.find(i+1).name %></h5>
            <h5 class="card-title"><%= Gossip.find(i+1).title %></h5>
            </div>
        </div>        
    <% end %>
</div>